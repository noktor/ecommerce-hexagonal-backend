{
  "name": "ecommerce-hexagonal-backend",
  "version": "1.0.0",
  "description": "E-commerce backend with hexagonal architecture, RabbitMQ retry system and Redis cache",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "check": "tsc --noEmit",
    "docker:up": "docker-compose up --build -d || docker compose up --build -d",
    "docker:down": "docker-compose down || docker compose down",
    "docker:logs": "docker-compose logs -f app || docker compose logs -f app",
    "docker:ps": "docker-compose ps || docker compose ps",
    "docker:check": "powershell -ExecutionPolicy Bypass -File .\\check-docker.ps1",
    "db:seed": "ts-node src/infrastructure/database/seed.ts",
    "env:setup": "if (!(Test-Path .env)) { Copy-Item .env.example .env; Write-Host 'Created .env from .env.example - Please update with your credentials' } else { Write-Host '.env already exists' }",
    "frontend:install": "cd frontend && pnpm install",
    "frontend:dev": "cd frontend && pnpm run dev",
    "frontend:build": "cd frontend && pnpm run build"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.1.6",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^25.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
